<%= simple_form_for @organization, html: { multipart: true } do |f| %>
  <%= f.error_notification %>
    <div class="field">
      <div class="control">
      <%= f.input :company_name, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "iTechArt" %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :description, input_html: { class: "textarea is-info" }, wrapper: false, label_html: { class: "label" }, placeholder: "Information about company" %>
      </div>
    </div>
  <%= f.button :submit, class: "button is-primary is-large is-rounded mv4" %>
<% end %>
