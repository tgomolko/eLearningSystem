<div class="columns is-centered">
  <div class="column is-6">
    <h1 class="title is-2"><%= @organization.company_name %></h1>

    <% if policy(@organization).edit? %>
      <%= link_to edit_organization_path(@organization) do %>
        <span class="is-pulled-right"><i class="fa fa-pencil" aria-hidden="true"></i></span>
      <% end %>
    <% end %>

    <h3 class="subtitle is-4">Description:</h3>
    <p><%= @organization.description %></p>
  </div>
</div>
