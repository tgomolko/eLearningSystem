<% if org.approved? %>
  <%= link_to reject_organization_path(org), method: :patch, title: "reject organization" do %>
    <span class="is-pulled-right"><i class="fa fa-close fa-2x" aria-hidden="true"></i></span>
  <% end %>
<% else %>
  <%= link_to approve_organization_path(org), method: :patch, title: "approve organization" do %>
    <span class="is-pulled-right"><i class="fa fa-check-circle fa-2x" aria-hidden="true"></i></span>
  <% end %>
<% end %>

<%= link_to edit_organization_path(org), title: "edit organization" do %>
  <span class="is-pulled-right"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></span>
<% end %>
