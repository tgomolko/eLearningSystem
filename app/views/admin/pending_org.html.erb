<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
      <h1 class="title is-2">Pending approving organizations</h1>

      <% @pending_org.each do |org|%>
        <div class="list is-hoverable">
          <%= link_to reject_organization_path(org), method: :patch, title: "reject organization" do %>
            <span class="is-pulled-right"><i class="fa fa-close fa-2x" aria-hidden="true"></i></span>
          <% end %>
          <%= link_to approve_organization_path(org), method: :patch, title: "approve organization" do %>
            <span class="is-pulled-right"><i class="fa fa-check-circle fa-2x" aria-hidden="true"></i></span>
            <% end %>
          <%= link_to org.company_name, org, class: "list-item" %>
        </div>
      <% end %>
      <%= link_to 'Back', admin_dashboard_path, { class: "button  is-small is-black"} %>
    </div>
  </div>
</div>