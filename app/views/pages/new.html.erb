<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
      <h1 class="title is-2">New Page for <%= @course.title%> course</h1>

      <%= simple_form_for @page, url: course_pages_path, html: { multipart: true } do |f| %>
        <%= f.error_notification %>
        <div class="field">
          <div class="control">
          <%= f.input :title, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "Page title" %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :content, input_html: {  class: "tinymce", rows: 40, cols: 120 }, wrapper: false, label_html: { class: "label" }, placeholder: "Page content" %>
          </div>
        </div>
        <%= f.button :submit, class: "button is-primary is-large is-rounded mv4" %>
      <% end %></br>

      <%= link_to 'Back', course_path(@course), { class: "button  is-small is-black"} %>
     </br>
    </div>
  </div>
</div>
<%= tinymce(uploadimage_form_url: course_tinymce_images_path(@course)) %>
