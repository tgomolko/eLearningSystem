<div class="columns is-centered">
  <div class="column is-4">
    <h1 class="title is-2">Editing Courses Page</h1>
    <%= simple_form_for(@page, url: "/courses/#{@course.id}/pages/#{@page.id}", method: :patch) do |f| %>
      <div class="field">
        <div class="control">
        <%= f.input :title, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "Page title" %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :content, input_html: { class: "tinymce", rows: 40, cols: 120 }, wrapper: false, label_html: { class: "label" }, placeholder: "Page content" %>
        </div>
      </div>

      <%= f.button :submit, 'Save changes', class: 'button is-link is-medium is-rounded mv4' %>
    <% end %>
    </br>
    </br>
  </div>
</div>
<%= tinymce(uploadimage_form_url: course_tinymce_images_path(@course)) %>
