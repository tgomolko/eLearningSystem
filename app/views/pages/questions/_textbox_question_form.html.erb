<div id ="q-text-form" class="add-from"> 
  <%= form_tag '/questions/add', method: :post, remote: true,  class: 'render-form' do %>
    <p><%= label_tag 'Question'%> <%= text_field_tag :content, nil, class: "" %></p>
    <p class="t-quest"><%= label_tag 'answer'%> <%= text_field_tag :answer %></p>
    <%= hidden_field_tag(:question_type, params["question_type"] = "textbox") %>
    <%= hidden_field_tag(:page_id, @page.id) %>
    <%= hidden_field_tag(:course_id, @course.id) %>
    <%= submit_tag 'Create text question', class: 'button is-small is-primary quest' %>
    <a class="hide-q">Hide</a> 
  <% end %>
</div>
