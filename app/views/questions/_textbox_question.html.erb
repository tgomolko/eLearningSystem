<% if question.textbox? %>
  <p><%= question.content%></p>
  <div class="answer-field">
    <a class="answer">add answer</a>
    <div id ="q-text-form" class="add-from"> 
      <%= form_tag '/user_answers/create', method: :post, remote: true,  class: 'render-form' do %>
        <% if answered?(question) %>
          <%= submit_tag 'Question answered!',  class: 'button is-small is-info is-dis' %>
        <% else %>
        <p><%= label_tag 'answer'%> <%= text_field_tag :answer, nil, required: true %></p>
        <%= hidden_field_tag(:course_id, @course.id) %>
        <%= hidden_field_tag(:page_id, @page.id) %>
        <%= hidden_field_tag(:question_id, question.id) %>
        <%= hidden_field_tag(:user_id, current_user.id) %>
          <%= submit_tag 'Answer on question', class: 'button is-small is-primary' %>
        <% end %>
      <% end %>
    <a class="hide-answer" style="">hide</a>
    </div>
  </div>
<% end %>
