<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <h1 class="title is-2">Favotites</h1>
  </div>
</div>
<div class="columns">
  <div class="column">
    <%= form_tag user_dashboard_favorites_path, method: :get, class: "search-form" do  %>
      <%= text_field_tag :q, params[:q], class: "string required input search" %>
      <%= submit_tag "Search", class: "button is-info is-rounded"%>
    <% end %>
    <table id="current-tb" class="table is-bordered is-hoverable is-striped">
      <thead>
        <tr class="is-selected">
          <th><%= sortable "title" %></th>
          <th><%= sortable "created_at", "Created"%></th>
          <th><%= sortable "user_id", "Author"%></th>
          <th><%= sortable "access_state", "Access Status"%></th>
        </tr>
      </thead>
       <tbody>
        <% @favorite_courses.each do |course| %>
          <tr>
            <th><%= link_to course.title, course_path(course) %></th>
            <th><%= course.created_at.strftime("%B %e, %Y") %>
            <th><%= course.user.name %>  
            <th><%= course.access_state %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <%= will_paginate @favorite_courses, renderer: BulmaPagination::Rails %>
    </div>
    </br>
    <%= link_to 'Back', user_dashboard_path, { class: "button  is-small is-black"} %>
  </div>
</div>
