<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <h1 class="title is-2">My Courses</h1>
  </div>
</div>
<div class="columns">
  <div class="column">
    <%= form_tag user_dashboard_my_courses_path, method: :get, class: "search-form" do  %>
      <%= text_field_tag :q, params[:q], class: "string required input search" %>
      <%= submit_tag "Search", class: "button is-info is-rounded"%>
    <% end %>
    <table id="current-tb" class="table is-bordered is-hoverable is-striped">
      <thead>
        <tr class="is-selected">
          <th><%= sortable "title" %></th>
          <th><%= sortable "created_at", "Created"%></th>
          <th><%= sortable "access_state", "Access Status"%></th>
          <th>Actions</th>
        </tr>
      </thead>
       <tbody>
        <% @user_courses.each do |course| %>
          <tr>
            <th><%= link_to course.title, course_path(course) %></th>
            <th><%= course.created_at.strftime("%B %e, %Y") %>
            <th><%= course.access_state %>
            <th>
                <div class="is-pulled-right"><%= link_to course, method: :detele, data: { confirm: "Are you sure you want to delete this" } do %>
                  <span class="is-pulled-right"><i class="fa fa-trash fa-1x" aria-hidden="true"></i></span>
              <% end %>
              <%= link_to edit_course_path(course), title: "edit course" do %>
                  <span class="is-pulled-right"><i class="fa fa-pencil fa-1x" aria-hidden="true"></i></span>
                <% end %>  </div>
            </th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <%= will_paginate @user_courses, renderer: BulmaPagination::Rails %>
    </div>
    </br>
    <%= link_to 'Back', user_dashboard_path, { class: "button  is-small is-black"} %>
  </div>
</div>
