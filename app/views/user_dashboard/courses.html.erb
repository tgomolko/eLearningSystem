<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <h1 class="title is-2">Courses not in Organizations</h1>
  </div>
</div>
<div class="columns">
  <div class="column">
    <%= search_form(user_dashboard_courses_path) %>
    <% if @not_org_courses.any? %>

      <table id="current-tb" class="table is-bordered is-hoverable is-striped">
        <thead>
          <tr class="is-selected">
            <th><%= sortable "title" %></th>
            <th><%= sortable "created_at", "Created"%></th>
            <th><%= sortable "user_id", "Author" %></th>
            <th><%= sortable "access_state", "Access Status"%></th>
          </tr>
        </thead>
         <tbody>
          <% @not_org_courses.each do |course| %>
            <tr>
              <th><%= link_to course.title, course_path(course) %></th>
              <th><%= course.created_at.strftime("%B %e, %Y") %>
              <th><%= course.user.name %>
              <th><%= course.access_state %>
            </tr>
          <% end %>
        </tbody>
      </table>

    <% else %>

      <div class="section">
        <div class="columns is-centered">
          <h3 class="title is-4">No courses yet :(</h3>
        </div>
      </div>

    <% end %>

  </div>
</div>

<%= paginate(@not_org_courses)%>

<%= link_to 'Back', user_dashboard_path, { class: "button  is-small is-black"} %>
