<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <h1 class="title is-2">Organization Courses</h1>
  </div>
</div>
<div class="columns">
  <div class="column">
    <%= search_form(user_dashboard_org_courses_path) %>
    <% if @org_courses.any? %>

      <table id="current-tb" class="table is-bordered is-hoverable is-striped">
        <thead>
          <tr class="is-selected">
            <th><%= sortable "title" %></th>
            <th><%= sortable "created_at", "Created"%></th>
            <th><%= sortable "user_id", "Author(manager)"%></th>
            <th><%= sortable "access_state", "Access Status"%></th>
          </tr>
        </thead>
         <tbody>

          <% @org_courses.each do |course| %>
            <tr>
              <th><%= link_to course.title, course_path(course) %></th>
              <th><%= course.created_at.strftime("%B %e, %Y") %></th>
              <th><%= course.user.name %></th>
              <th><%= course.access_state %></th>
            </tr>
          <% end %>

        </tbody>
      </table>

    <% else %>

      <div class="section">
        <div class="columns is-centered">
        </div>
      </div>

    <% end %>
  </div>
</div>

<%= paginate(@org_courses)%>
