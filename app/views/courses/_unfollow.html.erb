<% unless current_user.completed_all_course_pages?(@course) %>
  <%= form_for(current_user.relationships.find_by(followed_id: @course.id),
               html: { method: :delete }) do |f| %>
    <%= f.submit "Cancel Course", class: "button is-danger is-rounded is-large is-centered" %>
  <% end %>
<% end %>
