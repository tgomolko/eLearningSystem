<%= render 'user_courses/complete_course_form' %>
<% if course_started?(@course) && !all_user_pages_completed? %>
  <%= form_tag '/user_pages/continue', method: :post, remote: true,  class: 'render-form' do %>
    <%= hidden_field_tag(:user_id, current_user.id) %>
    <%= hidden_field_tag(:course_id, @course.id) %>
    <%= submit_tag "Continue course", class: "button is-info is-rounded is-large is-centered" %>
  <% end %>
<% end %>
</br>
<%= link_to "View Results", result_user_course_path(@course), class: "button is-large is-info is-fullwidth" if check_on_completed(current_user) %>

