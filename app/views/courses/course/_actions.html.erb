<% if user_signed_in? && policy(@course).edit? %>
    <div class="dropdown ">
      <div class="dropdown-trigger">
        <button class="button is-primary" aria-haspopup="true" aria-controls="dropdown-menu">
          <span>Actions</span>
          <span class="icon is-small">
            <i class="fa fa-angle-down" aria-hidden="true"></i>
          </span>
        </button>
      </div>

        <div class="dropdown-menu" id="dropdown-menu" role="menu">
          <div class="dropdown-content">
            <%= link_to 'Edit', edit_course_path(@course), { class: "dropdown-item"} %>

            <%= link_to "Add page to course", new_course_page_path(@course), class: "dropdown-item" if @course.draft? %>
          <div>
            <%= render "states", course: @course %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
