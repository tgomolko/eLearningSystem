<article class="media is-custom">
  <figure class="media-left">
    <p class="image is-64x64">
      <img src="https://bulma.io/images/placeholders/128x128.png" class="image-custom">
    </p>
  </figure>
  <div class="card-content">
    <p>
      <strong><%= link_to conversation.subject, conversation_path(conversation) %></strong>
      <div class="message-text"><%= conversation.last_message.body %></div>
      <time class="time"><%= conversation.last_message.created_at.strftime("%-d %B %Y, %H:%M:%S") %></time>
    </p>
    <p><%= render "conversation_buttons", conversation: conversation %></p>
  </div>
</article>
<p><%#= render 'conversations/participant', conversation: conversation %></p>
