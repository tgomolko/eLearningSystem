<%= form_tag course_raitings_path, method: :post, remote: true, class: 'render-form' do %>
  <%= hidden_field_tag(:course_id, @course.id) %>
  <div id = 'rating-form'>
    <label class="subtitle is-6">Please, rate this course</label>
  </div>
  <%= submit_tag 'Rate', class: 'button is-small is-info is-rounded', id: "rate-bnt" %>
<% end %>

